<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttonBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button.cut"
            style="@style/floatingButton"
            android:src="@drawable/ic_cut"
            tools:ignore="ContentDescription" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button.copy"
            style="@style/floatingButton"
            android:src="@drawable/ic_copy"
            tools:ignore="ContentDescription" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button.paste"
            style="@style/floatingButton"
            android:src="@drawable/ic_paste"
            tools:ignore="ContentDescription" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button.selectAll"
            style="@style/floatingButton"
            android:src="@drawable/ic_select"
            tools:ignore="ContentDescription" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button.rename"
            style="@style/floatingButton"
            android:src="@drawable/ic_rename"
            tools:ignore="ContentDescription" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button.share"
            style="@style/floatingButton"
            android:src="@drawable/ic_share"
            tools:ignore="ContentDescription" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button.delete"
            style="@style/floatingButton"
            android:src="@drawable/ic_delete"
            tools:ignore="ContentDescription" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button.create"
            style="@style/floatingButton"
            android:src="@drawable/ic_plus"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</ScrollView>